<!doctype html>
<html lang="en">

<head>

    <!-- Required meta tags -->
    <meta charset="utf-8" data-color-mode="light">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    
    <!-- Tab Icon -->
    <link rel="icon" href="/img/<%= data.web_icon %>">
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    
    <!-- My CSS -->
    <link rel="stylesheet" href="/css/style.css">
    
    <!-- Fontawesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" />
    
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-WKMHK9DESE"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-WKMHK9DESE');
    </script>

    <title><%= title %></title>

</head>

<body id="onTop" style="padding-top: 75px;">

    <!-- Static navbar -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/"><i class="fas fa-arrow-left"></i> <p class="d-inline">back</p> <img src="/img/<%= data.web_icon %>" alt="<%= data.full_name %>" title="AdhyW" width="36" height="36"></a>
            <a class="nav-item nav-link mx-2" href="/posts">All Posts</a>
        </div>
    </nav>
    <!-- End of static navbar -->

    <!-- Go top button -->
    <div class="row">
        <div class="col">
            <a class="goTop btn btn-secondary fixed-bottom mr-3 mb-3 ml-auto border-0 d-none" href="#onTop"
                style="width: 50px; height: 50px;">
                <i class="fas fa-chevron-up h4 pt-2"></i>
            </a>
        </div>
    </div>
    <!-- End of go top button -->

    <!-- Post section -->
    <div class="container">
        <div class="row mt-3">
            <div class="col-md-9">
                <% if (tag === "" && search === "") { %>
                    <h6>Latest Post</h6>
                <% } else if (tag !== "") { %>
                    <h5>#<%= tag %></h5>
                <% } %>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3 order-md-2 mb-3">
                <% posts.forEach(post => { %>
                    <% post.tags.forEach((tag, index) => { %>
                        <a class="text-dark" href="/tag/<%= tag %>"><span class="btn btn-sm btn-dark mb-2 px-2 mb-1">#<%= tag %></span></a>
                    <% }) %>
                <% }) %>
            </div>
            <div class="col-md-9">
                <% posts.forEach(post => { %>
                    <a href="/post/<%= post.slug %>">
                        <div class="card px-3 mb-3 shadow border-0">
                            <div class="card-body px-0">
                            <a class="text-dark text-underline-dark" href="/post/<%= post.slug %>"><h4 class="card-title mb-0"><%= post.title %></h4></a>
                            <small>
                                <%= arrDay[new Date(post.created_at).getDay()] %>, 
                                <%= new Date(post.created_at).getDate() %> 
                                <%= arrMonth[new Date(post.created_at).getMonth()] %> 
                                <%= new Date(post.created_at).getFullYear() %> 
                                <%= new Date(post.created_at).getHours() %>.<%= new Date(post.created_at).getMinutes() %>
                            </small><br>
                            <div class="tag-list my-2">
                                <% post.tags.forEach(tag => { %>
                                    <a class="text-dark" href="/tag/<%= tag %>"><span class="badge badge-light p-2 mb-1">#<%= tag %></span></a>
                                <% }) %>
                            </div>
                            <p class="card-text"><%= post.content.substring(0, 100) + "..." %><a href="/post/<%= post.slug %>">read more</a></p>
                            </div>
                        </div>
                    </a>
                <% }) %>
            </div>
        </div>
    </div>
    <!-- End of post section -->

    <!-- Footer -->
    <footer id="footer" class="pt-5 myFooter" style="margin-top: 140px;">
        <div class="container">
            <div class="row pb-3">
                <div class="col-md-3 mb-3">
                    <h6 class="mb-2">Contributions</h6>
                    <a class="d-block" href="https://drive.google.com/drive/folders/1WKvKRcrMdh7_JgOnMgWJJNn8xLs0h8-b?usp=sharing">Indonesian Traffic Sign Dataset</a>
                </div>
                <div class="col-md-3 mb-3">
                    <h6 class="mb-2">Mini app</h6>
                    <a class="d-block" href="/miniapp/covid-19">Covid-19 Indonesia</a>
                    <a class="d-block" href="/miniapp/weather">Weather</a>
                </div>
                <div class="col-md-3 mb-3">
                    <h6 class="mb-2">This template</h6>
                    <a class="d-block" href="https://github.com/AdhyWiranto44/adhywiranto44.github.io">Github</a>
                </div>
                <div class="col-md-3 mb-3">
                    <h6 class="mb-2">Made with</h6>
                    <a class="d-block" href="https://nodejs.org/en/">Node.js</a>
                    <a class="d-block" href="https://expressjs.com/">Express.js</a>
                    <a class="d-block" href="https://getbootstrap.com/">Bootstrap</a>
                    <a class="d-block" href="https://ejs.co/">EJS</a>
                </div>
            </div>
            <div class="row pt-3 border-top border-light">
                <div class="col-md-6 text-center text-md-left pb-3">
                    <small class="mr-2">&#169; <%= currentDate %>. Made with &#10084; By <%= data.full_name %></small>
                </div>
                <div class="col-md-6 text-center text-md-right pb-3">
                    <% data.social_media.forEach(socmed => { %>
                        <a href="<%= socmed.link %>" class="h4 mx-1 text-secondary" title="<%= socmed.title %>"><i class="<%= socmed.icon %>"></i></a>    
                    <% }) %>
                </div>
            </div>
        </div>
    </footer>
    <!-- End of footer -->

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="vendor/jquery/jquery.js"></script>
    <script src="vendor/jquery/jquery.easing.1.3.js"></script>
    <script src="vendor/popper/popper.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.min.js"></script>

    <!-- My own script -->
    <script src="js/script.js"></script>
</body>

</html>